<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.thegame.GameActivityTeam1"
    android:background="@drawable/chalkboard"
    >

    <Button
        android:id="@+id/start_round"
        android:layout_width="101dp"
        android:layout_height="58dp"
        android:onClick="onStartRoundButtonClicked"
        android:text="@string/start_game_button"
        app:layout_constraintRight_toLeftOf="@+id/stop"
        android:layout_marginRight="0dp"
        app:layout_constraintTop_toTopOf="@+id/stop"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/stop"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/stop"
        android:layout_width="64dp"
        android:layout_height="58dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="-1dp"
        android:layout_marginTop="8dp"
        android:onClick="onStopButtonClicked"
        android:text="@string/stop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/countdown_text"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/countdown_text"
        android:layout_width="68dp"
        android:layout_height="91dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="1dp"
        android:textColor="@android:color/background_light"
        android:textSize="54dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/scorecard_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onScorecardButtonClicked"
        android:text="@string/scorecard"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/switch_to_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="-1dp"
        android:onClick="onSwitchToTeamOneButton"
        android:text="@string/switch_to_team1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/clue_output"
        android:layout_width="365dp"
        android:layout_height="77dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="54dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.26" />

    <Button
        android:id="@+id/pass_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:onClick="onPassButtonClicked"
        android:text="@string/pass_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.38"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/clue_output"
        app:layout_constraintVertical_bias="0.26999998" />

    <Button
        android:id="@+id/correct_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:onClick="onCorrectButtonClicked"
        android:text="@string/correct_button"
        app:layout_constraintLeft_toRightOf="@+id/pass_button"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/pass_button"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/pass_button"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>
